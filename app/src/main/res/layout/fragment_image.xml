<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFC107">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        />

    <EditText
        android:id="@+id/top_caption"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter the top of the caption"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/transparent"
        android:background="#99607D8B"/>
        />

    <EditText
        android:id="@+id/bottom_caption"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter the bottom of the caption"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/transparent"
        android:textColorHint="@android:color/background_light"
        android:background="#99607D8B"/>

    <Button
        android:id="@+id/button_confim_text"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@color/button_colors"
        android:text="Confirm text"
        android:textColor="@color/com_facebook_button_background_color_focused" />

    <Spinner
        android:id="@+id/spinner_colors"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:padding="2dp"
        android:outlineAmbientShadowColor="@color/button_colors"

        />

</RelativeLayout>